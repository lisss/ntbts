/**
 * 8-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 * else out does not change
 */

CHIP Register8Bit {
    IN in[8], load;
    OUT out[8];

    PARTS:
    Register4Bit (in=in[0..3], load=load, out=out[0..3]);
    Register4Bit (in=in[4..7], load=load, out=out[4..7]);
}
